							<h3>@item.TenHH</h3>
								<h4>@item.Dongia.ToString("0.000")</h4>
							<p class="unit">Số lượng: <input name="" value=@item.SoLuong></p>
									<p class="mb-0 mt-4">@item.ThanhTien.ToString("0.000")</p>
								<a asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.MaHh"><p class="btn-area"><i aria-hidden="true" class="fa fa-trash"></i> <span class="btn2">Xóa</span></p></a>
						</div>
					</div>
				}
