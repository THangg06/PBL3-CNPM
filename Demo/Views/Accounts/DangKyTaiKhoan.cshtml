@model Demo.ModelViews.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <title> Đăng ký </title>
    <link rel="stylesheet" href="/css/Registerpage.css">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
        <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
   </head>
<body>
  <div class="container">
        <div class="title">Đăng ký tài khoản</div>
        <div class="content">
          <form asp-action="DangKyTaiKhoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-details">
                <div class="input-box">
                    <label asp-for="@Model.CustomerId" class="details">Tên đăng nhập*</label>
                    <input asp-for="@Model.CustomerId" class="form-control" type="text" />
                    <span asp-validation-for="@Model.CustomerId" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="@Model.FullName" class="details">Họ và tên*</label>
                    <input asp-for="@Model.FullName" class="form-control" type="text" />
                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="@Model.Email" class="details">Email*</label>
                    <input asp-for="@Model.Email" class="form-control" type="email" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="@Model.Phone" class="details">Số điện thoại*</label>
                    <input asp-for="@Model.Phone" class="form-control" type="tel" />
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="@Model.Birthday" class="details">Ngày sinh*</label>
                    <input asp-for="@Model.Birthday" class="form-control" type="date" />
                    <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="@Model.Password" class="details">Mật khẩu*</label>
                    <input asp-for="@Model.Password" class="form-control" type="password" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <label asp-for="@Model.ConfirmPassword" class="details">Nhập lại mật khẩu*</label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="button">
                <input type="submit" value="Đăng ký" class="btn btn-primary" />
            </div>

        </form>
        <div class="login">  
        Đã có tài khoản? <a asp-controller ="Accounts" asp-action="Login">Đăng nhập</a>
        </div>
        </div>


</div>




</body>
</html>

