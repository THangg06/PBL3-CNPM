@model IEnumerable<Demo.Data.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content_box">
    <div class="nav_dir">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home > </a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách phân quyền </a>

        </nav>
    </div>

</div>
    <div class="group_button">
        <input type="button"
               onclick="window.location.href='@Url.Action("Create")'"
               value="Tạo phân quyền mới" class="btn btn-info btn-sm">
    </div>
    <div class="data_table_container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Mô tả</th>
                    <th class="action_button">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.RoleId</th>
                            <td>@item.RoleName</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="group_button another">
                                    <input type="button" class="mod-btn"
                                           onclick="window.location.href='@Url.Action("Edit", new { id = item.RoleId })'"
                                           value="Sửa" class="btn btn-info btn-sm">

                                    <input type="button" class="mod-btn"
                                           onclick="window.location.href='@Url.Action("Details", new { id = item.RoleId })'"
                                           value="Chi tiết" class="btn btn-info btn-sm">

                                    <input type="button" class="mod-btn" id="delete"
                                           onclick="window.location.href='@Url.Action("Delete", new { id = item.RoleId })'"
                                           value="Xóa" class="btn btn-danger btn-sm">
                                </div>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    
</div>


