@model Demo.Data.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit</title>
  
</head>
<body>
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home > </a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập > </a>
                <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập </span>
            </nav>
        </div>

    </div>

        <form asp-action="Edit" asp-route-id="@Model.RoleId" method="post" class="form-horizontal" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId"> 
            <div class="form-group">
                <div class="form-group col-md-6">
                <label class="col-sm-2 col-form-label"  class="control-label">Role Name</label>
                <div class="col-sm-6"> 
                <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name" />
                </div>
            </div>
            </div>
        <div class="form-group">
            <div class="form-group col-md-6">
                <label class="col-sm-2 col-form-label" class="control-label">Description</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" asp-for="Description" placeholder="Description" />
                </div>
            </div>
        </div>
            <!-- Thêm các trường form khác tại đây -->

            <div class="form-group">
            <div class="form-group col-md-6">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </div>
                
            </div>
        </form>
   

  
</body>
</html>