@model Demo.Data.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Thông tin qyền truy cập</h2>
    <div class="table-responsive">
        <table class="table data-table">

            <tbody>

                <tr>
                    <td>ID:</td>
                    <td>@Model.RoleId</td>
                </tr>

                </tr>
            <td>Tên quyền truy cập:</td>
            <td>@Model.RoleName</td>
            </tr>

            </tr>
            <td>Mô tả:</td>
            <td>@Model.Description</td>

            </tr>

            </tr>
            <td>Xác nhận xóa:</td>
            <td>
                <form asp-action="Delete" asp-route-id="@Model.RoleId">
                    <input type="hidden" asp-for="RoleId" />
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger"/>
                </form>
            </td>

            </tr>

            </tbody>
        </table>
    </div>
</div>

