@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Demo.Data.Product>

@{
    int currentPage = ViewBag.CurrentPage ?? 1;  // Default to page 1 if not set
    ViewData["Title"] = "Product Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Breadcrumb Navigation -->
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item">
                <i class="anticon anticon-home m-r-5"></i>Home
            </a>
            <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">
                Quản lý sản phẩm
            </a>
            <span class="breadcrumb-item active">
                Danh sách sản phẩm: Page @currentPage
            </span>
        </nav>
    </div>
</div>

<!-- Search and Filtering Section -->
<div class="filter-group">
    <input type="text" id="keyword" name="keyword"  />
    <select class="custom-select" id="txtCatID" name="CatId" style="min-width: 200px" asp-items="ViewBag.Danhmuc">
        <option selected>Chọn Danh Mục</option>
        <option value="0">Chọn tất cả</option>
    </select>
</div>

<!-- Add Product Button -->
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Thêm sản phẩm</a>
</div>

<!-- Products Table -->
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Short Description</th>
            <th>Description</th>
            <th>Price</th>
            <th>Unit</th>
            <th>Best Sellers</th>
            <th>Active</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="records_table">
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ShortDesc</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Unit</td>
                <td>@product.BestSellers</td>
                <td>@product.Active </td>
                <td>@product.Cat.CatId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@product.ProductId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@product.ProductId" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div aria-label="Page navigation">
    <ul class="pagination">
        <pager class="page-item" list="@Model" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" asp-route-CatID="@ViewBag.CurrentCateID"></pager>
    </ul>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Khi chọn danh mục
            $("#txtCatID").change(function () {
                var selectedCatID = $(this).val(); // Lấy giá trị đã chọn (CatID)

                $.ajax({
                    url: '/Admin/AdminProducts/Filtter',
                    dataType: "json",
                    type: "GET",
                    data: {
                        CatID: selectedCatID
                    },
                    async: true,
                    success: function (results) {
                        if (results.status === "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert('Đã xảy ra lỗi');
                    }
                });
            });

            // Khi tìm kiếm sản phẩm
            $("#keyword").keyup(function () {
                var strkeyword = $("#keyword").val(); // Lấy giá trị tìm kiếm

                $.ajax({
                    url: '/Admin/Search/FindProduct',
                    dataType: "html",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        // Chèn kết quả HTML trả về vào `records_table`
                        $("#records_table").html(results);
                    },
                    error: function (xhr, status, error) {
                        console.error(`AJAX Error: ${status} - ${error}`);
                    }
                });
            });
        });

    </script>
}


