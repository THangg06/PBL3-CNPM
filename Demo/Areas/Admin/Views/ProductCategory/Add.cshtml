                                    @Html.ValidationMessageFor(x => x.CatId, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInput" class="control-label">Tên danh mục sản phẩm</label>
                                    @Html.TextBoxFor(x => x.CatName, new { @class = "form_control", @placeholder = "Tên danh mục sản phẩm" })
