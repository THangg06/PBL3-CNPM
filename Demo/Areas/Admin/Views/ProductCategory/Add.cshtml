                                            <label for="exampleInput" class="control-label">Tiêu đề danh mục sản phẩm</label>
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form_control", @placeholder = "Tiêu đề danh mục sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
