@model List<Demo.Data.Order>





@{
    ViewBag.Title = "Danh sách đơn hàng";
    int totalPages = ViewBag.TotalPages;
    int currentPage = ViewBag.CurrentPage;
}

<style>
    #modal-default {
        display: none;
    }
    </style>
    @*
    th, td {
        white-space: nowrap;
        border: 1px solid #ddd;
        padding: 8px;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #f2f2f2;
        color: black;
    }

    .border-right {
        border-right: none;
    }

    .border-left {
