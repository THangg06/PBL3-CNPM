    }
</style> *@
<div class="content_box">
    <div class="nav_dir">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item">
                <i class="anticon anticon-home m-r-5"></i>Trang chủ >
            </a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Order" asp-action="Index">Danh sách đơn hàng</a>
        </nav>
    </div>
</div>

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật đơn hàng</h4>


            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0"/>
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="ddTrangThai">
                        <option value="1">
                            Xác nhận đơn
                        </option>
                    </select>
                </div>


            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btnLuu">Lưu</button>

            </div>
        </div>

    </div>

</div>

        <div class="data_table_container card-body">
            <table class="table table-striped table-bordered data-table">
                <thead class="thead-dark">
                    <tr>
                    @*                         <th class="border-right">#</th> *@
                        <th class="border-right">Mã đơn hàng</th>
                        <th class="border-right">Tên khách hàng</th>
                        <th class="border-right">Số điện thoại</th>
                        <th class="border-right">Cách thanh toán</th>
                        <th class="border-right">Thời gian thanh toán</th>
                        <th class="border-right">Ngày tạo</th>
                        <th class="border-right">Ngày giao hàng</th>
                    <th class="border-right">Trạng thái đơn hàng</th>

                        <th class="action_button"></th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = (currentPage - 1) * 10;
                    foreach (var item in Model)
                    {
                                    <tr>
                            @*                                 <td>@(++i)</td> *@
                                        <td>@item.OrderID</td>
                                        <td>@item.FullName</td>
                                        <td>@item.Phone</td>
                                        <td>@item.CachThanhToan</td>
                                        <td>@item.PaymentDate.Value.ToString("hh\\:mm\\:ss dd/MM/yyyy")</td>
                                        <td>@item.OrderDate?.ToString("hh\\:mm\\:ss dd/MM/yyyy")</td>
                                        <td>@item.ShipDate?.ToString("dd/MM/yyyy")</td>
                            <td>@(item.TransactStatusId == 1 ? "Đã xác nhận" : "Chờ xác nhận")</td>

                                        <td>
                                            <div class="group_button another">
                                                    <a id="btn" href="/admin/order/view/@item.OrderID" class="btn btn-sm btn-success">Xem</a>
                                                    <a id="btn" href="#" class="btn btn-info btn-sm btnCapNhat" data-id="@item.OrderID">Cập nhật</a>
                                            </div>
                                            
                                        </td>
                                    </tr>
                    }
                }
                </tbody>
            </table>


        </div>
                <div class="nav_row">
                    <div class="nav_page_content col-6" style="text-align:right;">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                        @for (int i = 1; i <= totalPages; i++)
                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                            </li>
                        }
                            </ul>
                        </nav>
                    </div>
                </div>



</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

@section scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');
            });

            $('body').on('click', '.btnLuu', function () {
                var id = $('#txtOrderId').val();
                var tt = $('#ddTrangThai').val();
                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: tt },
                    success: function (res) {
                        if (res.Success) {
                            $('#modal-default').modal('hide'); // Close the modal
                            location.reload();
                            alert('Cập nhật thành công!');
                            // Reload the page to reset the order status
                        } else {
                            $('#modal-default').modal('hide');
                            location.reload();
                            alert('Cập nhật thành công!');
                            /* alert('Cập nhật thất bại!'); */ // Display an error message
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra. Vui lòng thử lại sau.'); // Handle any errors
                    }
                });
            });
        });
    </script>
}
