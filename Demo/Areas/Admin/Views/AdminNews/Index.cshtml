@model IEnumerable<Demo.Data.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<div class="content_box">
    <div class="nav_dir">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home > </a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminNews" asp-action="Index">Danh sách phản hồi </a>
            </nav>
        </div>
    </div>

<div class="data_table_container">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>

                <th>DatePosted</th>
                <th>Email</th>
                <th>Phone</th>
               
                @* <th>CatID</th> *@
            </tr>
        </thead>
        <tbody id="records_table">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NewsID</td>
                        <td>
                            <div class="row">
                              @*   <div class="col-md-6"><strong>Title:</strong></div> *@
                                <div class="col-md-6">@item.Title</div>
                            </div>
                        </td>
                        <td>
                            <div class="row">
                               @*  <div class="col-md-6"><strong>Content:</strong></div> *@
                                <div class="col-md-6">@item.Content</div>
                            </div>
                        </td>
                        <td>
                            <div class="row">
                               @*  <div class="col-md-6"><strong>DatePosted:</strong></div> *@
                                <div class="col-md-6">@item.DatePosted</div>
                            </div>
                        </td>
                        <td>
                            <div class="row">
                             @*    <div class="col-md-6"><strong>Email:</strong></div> *@
                                <div class="col-md-6">@item.Email</div>
                            </div>
                        </td>
                        <td>
                            <div class="row">
                              @*   <div class="col-md-6"><strong>Phone:</strong></div> *@
                                <div class="col-md-6">@item.Phone</div>
                            </div>
                        </td>
                       
                        <td>
                            <div class="group_button another">
                               @*  <input type="button" class="mod-btn"
                                       onclick="window.location.href='@Url.Action("Edit", new { id = item.NewsID })'"
                                       value="Sửa" class="btn btn-info btn-sm"> *@

                                <input type="button" class="mod-btn"
                                       onclick="window.location.href='@Url.Action("Details", new { id = item.NewsID })'"
                                       value="Chi tiết" class="btn btn-info btn-sm">

                                <input type="button" class="mod-btn" id="delete"
                                       onclick="if(confirm('Are you sure you want to delete?'))
                    { window.location.href='@Url.Action("Delete", new { id = item.NewsID })' }"
                                       value="Xóa" class="btn btn-danger btn-sm">
                            </div>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
</div>
