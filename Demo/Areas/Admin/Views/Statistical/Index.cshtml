        // Biểu đồ 2: Biểu đồ tròn
        var ctx2 = document.getElementById('chart2').getContext('2d');
        var chart2 = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Hamburger', 'Spagetti', 'Gà rán', 'Tráng miệng', 'Thức uống'],
                datasets: [{
                    data: [20, 30, 40, 25, 15],
                    backgroundColor: ['red', 'blue', 'yellow', 'green', 'purple'],
                    borderColor: 'black',
                    borderWidth: 1
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Tỷ lệ đặt loại món ăn'
                }
            }
        });

        // Biểu đồ 3: Biểu đồ miền
        var ctx3 = document.getElementById('chart3').getContext('2d');
        var chart3 = new Chart(ctx3, {
            type: 'line',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'],
                datasets: [{
                    label: 'Doanh thu',
                    data: [7000, 4000, 7000, 6000, 2000],
                    backgroundColor: ['rgba(0, 0, 255, 0.2)', 'rgba(128, 128, 128, 0.2)'],
                    borderColor: 'red',
                    borderWidth: 2,
                    pointRadius: 5,
                    pointBackgroundColor: 'red',
                    pointBorderColor: 'white',
                    pointHoverRadius: 10,
                    pointHoverBackgroundColor: 'yellow',
                    pointHoverBorderColor: 'black'
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Doanh thu theo tháng'
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });


        // Biểu đồ 4: Biểu đồ cột
        var ctx4 = document.getElementById('chart4').getContext('2d');
        var chart4 = new Chart(ctx4, {
            type: 'bar',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'],
                datasets: [{
                    label: 'Doanh thu(Đơn)',
                    data: [40, 50, 60, 70, 80],
                    backgroundColor: ['teal', 'teal', 'teal', 'teal', 'teal'],
                    borderColor: 'black',
                    borderWidth: 1
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Doanh thu theo tháng (VND)'
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }],
                    xAxes: [{
                        ticks: {
                            autoSkip: false,
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }]
                }
            }
        });
