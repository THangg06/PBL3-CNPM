<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Play:wght@400;700&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="~/css/dashboardad.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- /* Monda Font */ -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Monda:wght@400;700&display=swap" rel="stylesheet">




</head>

<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="./js/main.js" charset="utf-8"></script>
    
    <header class="header">
        <div class="admin-box">
            <img src="~/assets/admin/image.jfif" alt="">
            <h3>Hello, Admin</h3>
            <div class="fas fa-caret-down"></div>
        </div>

        <div class="search-bar">
            <div class="search-box">
                <label for="search-icon" class="fas fa-search"></label>
                <input type="search" id="search-box" placeholder="Tìm kiếm tại đây" style="background-image: linear-gradient(to right, #cfe2ff, #c2d1E8);
                    ">
            </div>

            <div class="fa-solid fa-bell"></div>
        </div>

    </header>

    <section class="body">
        <div class="container">

            <div class="nav-bar">
                <div class="option-box" id="menu-active">
                    <div class="fa-solid fa-gauge"></div>
                    <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Dashboard</a>
                </div>
                <li class="nav-item dropdown"> 
                <div class="option-box">
                    <div class="fa-solid fa-user-group"></div>
                    <a href="#">Quản lý hệ thống</a>
                </div>
                <ul class="dropdown-menu">
                    <li> 
                        <a href="#">Quản lý danh mục</a>

                    </li>
                    <li> 
                        <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Quản lý quyền truy cập</a>
                    </li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <div class="option-box">
                        <div class="fa-solid fa-user-group"></div>
                        <a href="#">Quản lý khách hàng</a>
                    </div>
                    <ul class="dropdown-menu">
                        <li>
                            <a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">Danh sách khách hàng</a>

                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Tìm kiếm khách hàng</a>
                        </li>
                    </ul>
                </li>

                <div class="option-box">
                    <div class="fa-solid fa-message"></div>
                    <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Quản lý sản phẩm</a>
                </div>

                <div class="option-box">
                    <div class="fa-solid fa-message"></div>
                    <a href="/">Quản lý tin tức</a>
                </div>

                <div class="option-box">
                    <div class="fa-solid fa-message"></div>
                    <a href="/">Thống kê</a>
                </div>

                <div class="option-box">
                    <div class="fa-solid fa-user-tie"></div>
                    <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">Quản lý tài khoản</a>
                </div>
            </div>
            @RenderBody()
         
        </div>


    </section>

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scrips", required: false)
</body>
</html>