<script>
    function editAvatar() {
        var accountId = '@User.Claims.FirstOrDefault(c => c.Type == "AccountId")?.Value';
        var url = '/Admin/HomeAdmin/EditAvatar?id=' + encodeURIComponent(accountId);
        window.location.href = url;
    }

    function updateUserInfo() {
        var accountId = '@User.Claims.FirstOrDefault(c => c.Type == "AccountId")?.Value';
        if (!accountId) {
            console.error("AccountId không tồn tại trong claims.");
            return;
        }

        $.ajax({
            url: '/Admin/HomeAdmin/Inf',
            type: 'GET',
            success: function (data) {
                $('#user-info-container').html(data);
            },
            error: function (xhr, status, error) {
                console.error(`Lỗi AJAX: ${status} - ${error}`);
            }
        });
    }

    $(document).ready(function () {
        updateUserInfo();
    });
</script>
