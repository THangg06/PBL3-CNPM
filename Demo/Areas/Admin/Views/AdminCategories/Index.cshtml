@model IEnumerable<Demo.Data.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="content_box">
    <div class="data_table_container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CatName)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.Published)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Thumb)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatName)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Published)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Thumb)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            <div class="group_button another">

                                <input type="button" class="mod-btn"
                                       onclick="window.location.href='@Url.Action("Edit", new { id = item.CatId })'"
                                       value="Sửa" class="btn btn-info btn-sm">

                                <input type="button" class="mod-btn"
                                       onclick="window.location.href='@Url.Action("Details", new { id = item.CatId })'"
                                       value="Chi tiết" class="btn btn-info btn-sm">

                                <input type="button" class="mod-btn" id="delete"
                                       onclick="if(confirm('Are you sure you want to delete?'))
                { window.location.href='@Url.Action("Delete", new { id = item.CatId })' }"
                                       value="Xóa" class="btn btn-danger btn-sm">
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <div class="group_button">
        <input type="button"
               onclick="window.location.href='@Url.Action("Create")'"
               value="Tạo danh mục mới" class="btn btn-info btn-sm">
    </div>
</div>
