@section Scripts {
        <script>
            $(document).ready(function () {
                // Function to handle search
                function search() {
                    var strkeyword = $("#keyword").val();

                    $.ajax({
                        url: '/Admin/Search/FindCustomer',
                        dataType: "html",
                        type: "POST",
                        data: { keyword: strkeyword },
                        async: true,
                        success: function (results) {
                            $("#records_table").html(results);
                        },
                        error: function (xhr, status, error) {
                            console.error(`Lỗi AJAX: ${status} - ${error}`);
                        }
                    });
                }

                // Call search function when the button is clicked
                $("input[type='button'][value='Tìm']").click(function () {
                    search();
                });

                // Call search function when the Enter key is pressed
                $("#keyword").keyup(function(event) {
                    if (event.keyCode === 13) {
                        search();
                    }
                });
            });

        $(document).ready(function () {
    $('body').on('click', '.btnCapNhat', function () {
        var id = $(this).data("id");
        $('#txtOrderId').val(id);
        $('#modal-default').modal('show');
    });

    $('body').on('click', '.btnLuu', function () {
        var id = $('#txtOrderId').val();
        var tt = $('#ddTrangThai').val() === "True"; // Chuyển giá trị về boolean
        $.ajax({
            url: '/admin/admincustomers/UpdateTT',
            type: 'POST',
            data: { id: id, trangthai: tt }, 
            success: function (res) {
                        if (res.Success) {
                            $('#modal-default').modal('hide'); // Close the modal
                            location.reload(); // Reload the page to reset the order status
                        } else {
                            $('#modal-default').modal('hide');
                            location.reload();
                            alert('Cập nhật thành công!'); // Display an error message
                        }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert("Có lỗi xảy ra: " + textStatus + " - " + errorThrown);
            }
        });
    });
});



        </script>
}

