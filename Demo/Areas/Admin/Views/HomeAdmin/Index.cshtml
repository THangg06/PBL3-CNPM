@{
    ViewBag.Title = "Recent Revenue";
}

<h2>Doanh thu 5 ngày gần nhất</h2>
<hr />
<style>
    canvas {
        max-width: 1200px; /* Giới hạn chiều rộng của canvas */
        max-height: 700px; /* Cho phép canvas điều chỉnh chiều cao tự động */
        display: block; /* Đảm bảo canvas hiển thị đúng trên mọi thiết bị */
        margin: 0 auto; /* Canh giữa canvas */
    }
</style>
<canvas id="recentRevenueChart"></canvas>
<hr />
<h3 class="text-center">
    Tổng doanh thu: @(ViewBag.CountsumRevenue)0 VNĐ

</h3>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var dates = @Html.Raw(Json.Serialize(ViewBag.RecentDates));
        var revenue = @Html.Raw(Json.Serialize(ViewBag.RevenueByDate));

        var ctx = document.getElementById('recentRevenueChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [{
                    label: 'Doanh thu theo ngày(Nghìn VNĐ)',
                    data: revenue,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

    </script>
}
