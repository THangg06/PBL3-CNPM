<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Line Chart Example</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        canvas {
            max-width: 2500px; /* Giới hạn chiều rộng của canvas */
            max-height: 3000px; /* Cho phép canvas điều chỉnh chiều cao tự động */
            display: block; /* Đảm bảo canvas hiển thị đúng trên mọi thiết bị */
            margin: 0 auto; /* Canh giữa canvas */
        }
    </style>
</head>
<body>
    <canvas id="myChart"></canvas>

    <script>
        // Lấy tham chiếu canvas
        var ctx = document.getElementById('myChart').getContext('2d');

        // Khởi tạo biểu đồ đường
        var myChart = new Chart(ctx, {
            type: 'line', // Loại biểu đồ: đường
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6'], // Nhãn cho trục x
                datasets: [{
                    label: 'Doanh thu', // Nhãn cho dữ liệu
                    data: [5000, 2000, 4000, 8000, 9000, 1000], // Dữ liệu cho các điểm trên đường
                    fill: false, // Bật/tắt tô màu vùng dưới đường
                    borderColor: 'red', // Màu đường viền
                    borderWidth: 2, // Độ rộng đường viền
                    pointRadius: 5, // Bán kính điểm dữ liệu
                    pointBackgroundColor: 'red', // Màu nền điểm dữ liệu
                    pointBorderColor: 'white', // Màu viền điểm dữ liệu
                    pointHoverRadius: 10, // Bán kính điểm dữ liệu khi di chuột qua
                    pointHoverBackgroundColor: 'yellow', // Màu nền điểm dữ liệu khi di chuột qua
                    pointHoverBorderColor: 'black' // Màu viền điểm dữ liệu khi di chuột qua
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Doanh thu theo tháng (VND)'
                },
                scales: {
                    y: {
                        beginAtZero: true // Bắt đầu trục y từ 0
                    }
                },
                layout: {
                    padding: {
                        left: 10,
                        right: 10,
                        top: 10,
                        bottom: 10
                    }
                }
            }
        });
    </script>
</body>
</html>
