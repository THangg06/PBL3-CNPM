@model Demo.Data.Account
@{
    ViewData["Title"] = "EditProfileAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .product-image {
        max-width: 200px;
        max-height: 200px;
    }
</style>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Play:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <link href="./css/Info.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Monda:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <hr />
    <div class="container">
        @if (TempData["UpdateMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["UpdateMessage"]
            </div>
        }
        <div class="title">Chỉnh sửa thông tin</div>
        <div class="content">
            <form asp-area="Admin" asp-action="EditProfileAdmin" asp-controller="HomeAdmin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AccountId" />
                <div class="user-details">
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Tên</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="button">
                    <input type="submit" value="Lưu" />
                    <input type="button" value="Quay lại trang profile" onclick="window.location.href='@Url.Action("ProfileAdmin", "HomeAdmin")'" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
